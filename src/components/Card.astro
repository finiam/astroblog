---
export type Props = SanityPostPreview;

const { slug, title, featuredImage, featuredImageAlt } = Astro.props;
---

<a href={slug.current} class="card">
  <figure class="card-img">
    <img src={featuredImage.asset.url} alt={featuredImageAlt} loading="lazy" />
  </figure>
  <h2>
    {title}
  </h2>
</a>

<style>
  .card {
    text-decoration: none;
  }
  h2 {
    font-size: 1.5em;
  }
  .card-img {
    margin: 0 0 1em;
    height: 150px;
    overflow: hidden;
  }
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center;
  }
  @media screen and (min-width: 40em) {
    .card-img {
      height: 280px;
    }
  }
</style>
